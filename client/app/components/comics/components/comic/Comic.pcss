@import '../../../../styles/variables.pcss';

.comic {
  width: 100%;
  display: flex;
  flex-direction: column;
  -webkit-overflow-scrolling: touch;
  min-height: 100vh;
}

.comic--phone {
  .comic__hero {
    width: 100vw;

    img {
      width: 100%;
    }
  }

  .comic__description {
    margin-top: 20px;
    padding: 0 15px;
  }

  .comic__title {
    word-break: break-word;
  }

  .comic__title,
  .comic__description,
  .comic__characters h2,
  .comic__characters__wrapper__character h3,
  .comic__characters__wrapper__character p {
    padding: 0 15px;
  }

  .comic__characters h2 {
    margin-top: 30px;
  }

  .comic__characters__wrapper__character img {
    margin-top: 15px;
  }

  .comic__characters {
    &__wrapper {
      display: flex;
      flex-direction: column;

      h3 {
        padding: 0 15px;
      }

      &__character {
        width: 100vw;

        img {
          width: 100%;
        }

        p {
          margin-top: 15px;
        }
      }
    }
  }
}

.comic__portrait-tablet {
  display: none;
}

@media (--portrait-tablets) {
  .comic--phone {
    display: none;
  }

  .comic__portrait-tablet {
    display: flex;

    .comic__portrait-tablet__wrapper {
      display: flex;
      flex-direction: row;
      flex-shrink: 0;
    }

    .comic__hero {
      lost-column: 1/2 2 20px;

      img {
        width: 100%;
      }
    }

    .comic__portrait-tablet__information {
      lost-column: 1/2 2 20px;
    }

    .comic__title,
    .comic__description,
    .comic__characters h2,
    .comic__characters__wrapper__character h3,
    .comic__characters__wrapper__character p {
      padding: 0 15px;
    }

    .comic__characters {
      width: 100%;

      &__wrapper {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;

        &__character {
          lost-column: 1/3 3 20px;

          img {
            width: 100%;
          }

          p {
            margin-top: 15px;
          }
        }
      }
    }
  }
}
